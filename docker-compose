version: '3.7'

services:
  postgres:
    image: postgres
    environment:
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: postgres
      POSTGRES_DB: postgres

  postgres-test:
    image: postgres
    environment:
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: postgres
      POSTGRES_DB: postgres

  app:
    build:
      context: .
    ports:
      - 3000:3000
    volumes:
      - .:/app
    depends_on:
      - postgres
      - postgres-test
    environment:
      DB_PORT: 5432
      DB_HOST: postgres
      DB_USER: postgres
      DB_PASSWORD: postgres
      DB_DATABASE: postgres

    command: npm run start

  test-runner:
    build:
      context: .
    volumes:
      - .:/app
    environment:
      DB_PORT: 5432
      DB_TEST_HOST: postgres-test
      DB_TEST_USER: postgres
      DB_TEST_PASSWORD: postgres
      DB_TEST_DATABASE: postgres

    command: npm run test
